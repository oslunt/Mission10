@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCat="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCat="@c" asp-route-pageNum="1" class="btn @(ViewBag.SelectedCat == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>